<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <KeepRunningUntilFailure>
            <ReactiveSequence>
                <Fallback>
                    <Action ID="BatteryChecker"/>
                    <Action ID="Recharge"/>
                </Fallback>
                <Sequence>
                    <Action ID="GetLine"/>
                    <Action ID="NavLine"/>
                    <Action ID="ChangeLine"/>
                </Sequence>
            </ReactiveSequence>
        </KeepRunningUntilFailure>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="BatteryChecker"/>
        <Action ID="ChangeLine"/>
        <Action ID="GetLine"/>
        <Action ID="GetWaypoint">
            <output_port name="waypoint"/>
            <input_port name="wp_id"/>
        </Action>
        <Action ID="Move">
            <input_port name="goal"/>
        </Action>
        <Action ID="NavLine"/>
        <Action ID="Patrol"/>
        <Action ID="Recharge"/>
        <Action ID="TrackObjects"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
